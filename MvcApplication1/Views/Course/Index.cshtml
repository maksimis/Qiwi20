@foreach (var item in Model) {
    
    <div class="row-fluid padd5">
        <div class="span3">
            <img src="@Url.Content("~/images/"+ item.ImageSource)" />
        </div> 
        <div class="span9">
            <div class="row-fluid">
                <div class="span9 bold">@Html.DisplayFor(modelItem => item.Name)</div>
                <div class="span3">Уровень: @Html.DisplayFor(modelItem => item.level)</div>
             </div>
            <div class="row-fluid">
                Тематика: @Html.DisplayFor(modelItem => item.Theme)
            </div>
            <div class="row-fluid">
                О курсе: @Html.DisplayFor(modelItem => item.Description)
            </div>
            <div class="row-fluid">
                <div class="span3">
                   Рейтинг: @Html.DisplayFor(modelItem => item.rating)

                </div>
                <div class="span3">Автор: @Html.DisplayFor(modelItem => item.autor)</div>
                <div class="span3">Стоимость: @Html.DisplayFor(modelItem => item.Price) руб.</div>
                <div class="span3 green">@Html.ActionLink("Купить", "Buy", new { id = item.ID })/
                @Html.ActionLink("Подробнее", "Details", new { id = item.ID })</div>
            </div>
         </div> 

    </div>
    
    
   
}

